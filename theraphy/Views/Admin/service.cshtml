<script>

    function OpenDialog(id) {
        var emp =
                   {
                       ID : id,
                   }
        $('#add').addClass('hidden');
        $('#type').addClass('hidden');
        $('#logoid').addClass('hidden');
        $('#hide').removeClass('hidden');
            $.ajax({
                url: '/Admin/getservice/' + id,
                type: 'GET',
                //contentType: 'application/json; charset=utf-8',
                success: function (data) {

                    $('#hdnid').val(data.data.ID);
                   $('#service_name').val(data.data.SERVICE_NAME);
                   $('#service_description').val(data.data.DESCRIPTION);

                   var isactive = data.data.IS_ACTIVE;
                   if (isactive == true) {
                       $('input:radio[name=IS_ACTIVE]')[0].checked = true;
                   }
                   else {
                       $('input:radio[name=IS_ACTIVE]')[1].checked = true;
                   }    

                }
            });
        }
</script>
<script>
        function Delete(id,del)
        {
            if (confirm("Are you sure Delete this Record?")) {
                var deletes =
                   {
                       ID : id,
                       service_del : del,
                   }
                {
                    $.ajax({
                        url: '/Admin/delete/',
                        data: JSON.stringify(deletes),
                        type: 'post',
                        contentType: 'application/json; charset=utf-8',
                        success: function (data) {
                            var dt = data.data.ID;

                                $('#row_'+dt).hide();


                        }
                    });
                    error: {

                    }
                }
            }
            return false;
        }

</script>

