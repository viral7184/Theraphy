<script src="~/ckeditor/ckeditor.js"></script>
<script>CKEDITOR.replace('editor1');</script>


<script>
    function myFunction() {              
        
        $.ajax({
            url: '/Admin/getabout/',
            type: 'GET',
            success: function (data) {               
                CKEDITOR.instances.editor1.setData(data.data.DESCRIPTION);
               
            }
        });
    }

</script>
