                </div>

                <div class="box-footer">
                   <input type="hidden" id="hdnid" name="ID" value="@Model.ID"/>
                    <input type="submit" class="btn btn-success pull-right" id="hide" value="Edit About" />
                </div>
            </form>

        </div>
