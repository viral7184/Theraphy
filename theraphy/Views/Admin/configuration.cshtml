}


<section class="content">  

    <!-- Modal -->
    
    <!-- Info boxes -->
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Configuration</h3>
          
        </div>

        <form method="post" class="container" enctype="multipart/form-data" id="myForm">

            <div class="row">
                <div class="col-sm-5">
                    <div class="form-group ">
                        <label>Email<span class="error"> * </span></label>
                        <input type="email" name="EMAIL" value="@Model.EMAIL" id="email"  class="form-control" placeholder="Enter Email" required>
                        <!-- <span class="help-block error">* User Name Already Exist</span> -->
                    </div>
                </div>
                <!-- text input -->
                <!-- text input -->
                <div class="col-sm-5">
                    <div class="form-group ">

                        <label>Contact</label>
                        <input type="text" class="form-control" value="@Model.CONTACT" id="contact" required onkeypress="phoneno()" maxlength="10" name="CONTACT" placeholder="Enter Contact No">
                        <!-- <span class="help-block error">* User Name Already Exist</span> -->
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-5">
                    <div class="form-group ">
                        <label>Clinic Timing</label>
                        <input type="text" class="form-control" value="@Model.TIMING" required name="TIMING" id="timing" placeholder="Enter Timings">
                        <!-- <span class="help-block error">* User Name Already Exist</span> -->
                    </div>
                </div>
                <div class="col-sm-5">
                    <div class="form-group">
                        <label>Clinic Address</label>
                        <input type="text" class="form-control" value="@Model.CLINIC_ADDRESS" required name="CLINIC_ADDRESS" id="clinic_address" placeholder="Enter Address" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-5">
                    <div>
                        <label>Clinic Email</label>
                        <input type="email" class="form-control" name="CLINIC_EMAIL" value="@Model.CLINIC_EMAIL" id="clinic_email" placeholder="Enter Email" />
                    </div>
                </div>
                <div class="col-sm-5">
                    <div>
                        <label>Clinic Contact</label>
                        <input type="text" class="form-control" value="@Model.CLINIC_CONTACT" onkeypress="phoneno()" maxlength="10" name="CLINIC_CONTACT" id="clinic_contact" placeholder="Enter Clinic Contact No">
                    </div>
                </div>
            </div>



            <div class="form-group" id="logoid">
                <label for="exampleInputFile">Logo upload</label>
                <input type="file" value="@Model.LOGO_IMAGE" name="LOGO_IMAGE" id="Logo">
                <a><img src="~/images/@Model.LOGO_IMAGE" class="img-responsive"  style="margin-left:200px;margin-top:-33px" /></a>
            </div>

            <div class="row">
                <div class="col-sm-5">
                    <div class="form-group ">
                        <label>Facebook</label>
                        <input type="text" class="form-control" value="@Model.FACEBOOK" name="FACEBOOK" id="facebook" placeholder="Enter Facebook Link">
                        <!-- <span class="help-block error">* User Name Already Exist</span> -->
                    </div>
                </div>


                <div class="col-sm-5">
                    <div class="form-group ">
                        <label>Twitter</label>
                        <input type="text" class="form-control" value="@Model.TWITTER" name="TWITTER" id="twitter" placeholder="Enter Twitter Link">
                        <!-- <span class="help-block error">* User Name Already Exist</span> -->
                    </div>
                </div>
            </div>



            <div class="row">
                <div class="col-sm-5">
                    <div class="form-group ">
                        <label>Google Plus</label>
                        <input type="text" class="form-control" value="@Model.GOOGLE_PLUS" name="GOOGLE_PLUS" id="google_plus" placeholder="Enter Google Plus Link">
                        <!-- <span class="help-block error">* User Name Already Exist</span> -->
                    </div>
                </div>
                <div class="col-sm-5">
                    <div class="form-group ">
                        <label>Linked In</label>
                        <input type="text" class="form-control" name="LINKED_IN" value="@Model.LINKED_IN" id="linked_in" placeholder="Enter Linked In Link">
                        <!-- <span class="help-block error">* User Name Already Exist</span> -->
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-5">
                    <div class="form-group ">
                        <label>Youtube</label>
                        <input type="text" class="form-control" value="@Model.YOUTUBE" name="YOUTUBE" id="youtube" placeholder="Enter Youtube Link">
                        <!-- <span class="help-block error">* User Name Already Exist</span> -->
                    </div>
                </div>
