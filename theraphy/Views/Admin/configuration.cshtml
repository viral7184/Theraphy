<script>

    function OpenDialog() {
        var emp =
                   {
                     
                   }
        $('#add').addClass('hidden');
        $('#logoid').addClass('hidden');
        $('#hide').removeClass('hidden');
            $.ajax({
                url: '/Admin/getconfiguration/',
                type: 'POST',
                //contentType: 'application/json; charset=utf-8',
                success: function (data) {

                    $('#hdnid').val(data.data.ID);
                  //  $('#start_day').val(data.data.start_day);
                    $('#email').val(data.data.EMAIL);
                    $('#contact').val(data.data.CONTACT);
                    $('#timing').val(data.data.TIMING);
                    $('#clinic_address').val(data.data.CLINIC_ADDRESS);
                    $('#clinic_email').val(data.data.CLINIC_EMAIL);
                    $('#clinic_contact').val(data.data.CLINIC_CONTACT);
                    $('#logo_image').val(data.data.LOGO_IMAGE);
                    $('#facebook').val(data.data.FACEBOOK);
                    $('#twitter').val(data.data.TWITTER);
                    $('#google_plus').val(data.data.GOOGLE_PLUS);
                    $('#linked_in').val(data.data.LINKED_IN);
                    $('#youtube').val(data.data.YOUTUBE);
                    var isactive=data.data.IS_ACTIVE;
                    if (isactive == true) {
                        $('input:radio[name=IS_ACTIVE]')[0].checked = true;
                    }
                    else {
                        $('input:radio[name=IS_ACTIVE]')[0].checked = false;
                    }
                 
                }
            });
        }
</script>
